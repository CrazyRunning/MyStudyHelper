<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/trans_white">
        <shape
            android:shape="oval"
            android:useLevel="false" >
        <solid android:color="@color/common_red" />
        <padding
            android:left="2dp"
            android:top="1dp"
            android:right="2dp"
            android:bottom="1dp" />
        <solid
            android:color="@color/common_red" />
        <stroke
            android:width="1dp"
            android:color="@android:color/white" />
        <size android:width="15dp"
            android:height="15dp" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval"
            android:useLevel="false" >
            <solid android:color="@color/common_red" />
            <padding
                android:left="2dp"
                android:top="1dp"
                android:right="2dp"
                android:bottom="1dp" />
            <solid
                android:color="@color/common_red" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white" />
            <size android:width="15dp"
                android:height="15dp" />
        </shape>
    </item>
</selector>