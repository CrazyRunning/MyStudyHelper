<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/blue"
    tools:context="com.my_swpu.mystudyhelper.activity.menu.PersonalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background0">

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue">
        <LinearLayout
            android:id="@+id/ll_back_on_personalactivity"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_add_acount"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgBackOnMWA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_normal"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人信息"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <com.my_swpu.mystudyhelper.view.widget.XScrollView
        android:id="@+id/personal_xscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTitle"/>
</RelativeLayout>

</RelativeLayout>
