<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/blue"
    tools:context="com.my_swpu.mystudyhelper.activity.TakeReleaseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background0">

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue">
        <LinearLayout
            android:id="@+id/ll_back_on_releaseactivity"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_add_acount"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgBackOnMWA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_normal"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvTitleOnRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="新闻"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="16sp" />
        </RelativeLayout>
    <LinearLayout

        android:id="@+id/ll0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="2dp"
        android:background="@color/blue">

        <LinearLayout
            android:id="@+id/ll_news"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/selector_add_acount">

            <ImageView
                android:id="@+id/imgNews"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/news_no" />

            <TextView
                android:id="@+id/tvNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_movies"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/selector_add_acount">

            <ImageView
                android:id="@+id/imgMovie"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/movie_no" />

            <TextView
                android:id="@+id/tvMovies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影视"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_jokes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/selector_add_acount">

            <ImageView
                android:id="@+id/imgJoke"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/joke_no" />

            <TextView
                android:id="@+id/tvJokes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="笑话"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_below="@+id/rlTitle"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll0"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp">
    </android.support.v4.view.ViewPager>

        </RelativeLayout>

</RelativeLayout>
